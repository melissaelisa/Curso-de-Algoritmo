Algoritmo "Somador7Numeros"
// Faça um programa que leia 7 números inteiros e no final mostre o somatório
//entre eles.
Var
   num, soma, contador: inteiro


Inicio
   contador <- 0
   Enquanto (contador<7) faca
      EscrevaL ("Informe um número: ")
      Leia (num)
      soma <- soma + num
      contador <- contador + 1
   FimEnquanto
   EscrevaL (soma)

Fimalgoritmo